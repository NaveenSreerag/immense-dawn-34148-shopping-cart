<%-include ('partials/header'); -%>


    <div class="table-container">
        <h1 class="heading">My Orders</h1>
        <table class="table">
            <% if (orders.length){ %>

                


                <thead>
                    <tr>
                        <th>Orders</th>
                        <th>Product</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody>

                    <% orders.forEach(function(order){ %>
                      

                        <tr>



                            <td data-label="Orders" class="orderId">
                                <a href="/order/myorders/<%=order._id%>"><%= order.id%></a>
                                
                            </td>
                            <td data-label="Product">


                                <% var total=0; %>

                                <% order.items.forEach(function(item){ %>

                                    
                                    <% subTotal=item.qty*item.price %>
                                        <% total +=subTotal %>

                                    <li>
                                        <%=item.name%>
                                    </li>
                               <ul>
                                <li><img src="<%=item.image%>" class="order-image" alt=""></li>
                                   <li>Quantity: <%=item.qty%></li>
                                   <li>Price:  $<%=item.price%></li>
                                   <li>SubTotal:  $<%=subTotal%></li>
                                 
                               </ul>
                               <hr>

                                <% }) %>
                                <p>Total: $<%=total%></p>

                                
                            </td>
                            <td data-label="Address">
                                <ul>
                                    <li><%=order.name%></li>
                                    <li><%=order.address%></li>
                                    <li><%=order.landmark%></li>
                                    <li><%=order.town%></li>
                                </ul>
                            </td>
                            <td data-label="Phone Number"><%= order.phone%></td>
                            <td data-label="Time"><%=moment(order.createdAt).format('LLLL')%></td>
                        </tr>

                   <% }) %>
                   

            
                </tbody>

                <%}else{ %>

                    <h3>There is no Orders</h3>
                    <%} %>
        </table>
    </div>





    <%-include ('partials/footer'); -%>