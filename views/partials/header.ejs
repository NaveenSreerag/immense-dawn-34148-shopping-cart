    <!-- light slider -->
    <link rel="stylesheet" href="/css/lightslider.css">
    <script src="https://kit.fontawesome.com/cb20171509.js" crossorigin="anonymous"></script>

    <!-- line awesome -->

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css"
        integrity="sha512-vebUliqxrVkBy3gucMhClmyQP9On/HAWQdKDXRaAlb/FKuTbxkjPKUyqVOxAcGwFDka79eTF+YXwfke1h3/wfg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />





</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid nav">
            <a class="navbar-brand logo" href="#">
                <img src="/images/hdset1.jpeg" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                      <%  if(user){ %>
                        <a class="nav-link" href="/order/myorders">My Orders</a>
                      <%  }else{ %>
                        <a class="nav-link" href="/">Men</a>
                        <%  } %>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Women</a>

                    </li>
                    <li class="nav-item"><a href="#" class="nav-link">Kids</a></li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Shop</a>
                        <span class="sale-label">Sale</span>
                    </li>
                


                    <% if(user) { %>

                     

                        <li class="nav-item">
                           
                            <a href="/user/my-account" class="user nav-link">
                                <% if(user.photo==="deafult.jpg"){ %>


                                    <img src="/images/user/<%=user.photo%>" class="user-deafult-image" alt="">
                               <% }else{ %>
                                <img src="/images/user/<%=user.id%>/<%=user.photo%>" class="user-deafult-image" alt="">
                               <% } %>
                                 
                              
                             
                                
                                 <%= user.name%></a>
                        </li>

                        <li class="nav-item">
                            <a href="/user/logout" class="user nav-link">
                                Logout
                            </a>
                        </li>
                        

                        <% } %>

                        <% if(user && user.admin == 1) { %>

                            <li class="nav-item">
                                <a href="/admin/dashboard" class="user nav-link">
                                 Admin Area
                                </a>
                            </li>
    
                            <% } %>


                          

                </ul>

            </div>
            <div class="right-menu">
                <!-- <a href="javascript:void(0);" class="search">
                    <i class="fas fa-search"></i>
                </a> -->


                <%if (!user){ %>
                    <a href="/user/register" class="user">
                        <i class="las la-user font-awesome"></i>
                    </a>

                    <% } %>



                       
                            <a href="/cart/checkout">
                                <i class="fas fa-shopping-cart">
                                    <span class="cart-num">

                                        <% if (typeof cart !=="undefined" ){ %>

                                            <%= cart.length%>

                                                <% } else { %>

                                                    0

                                                    <% } %>
                                    </span>
                                </i>
                            </a>


            </div>
        </div>
    </nav>


