 <%- include('../partials/adminheader'); -%>

    <div class="container ">

        <h2 class="mt-4 text-center">Add Category</h2>
        <hr>
        <a href="/admin/categories" class="btn btn-primary mt-4">Back to all Categories</a>

        <form method="POST" action="/admin/categories/add-category" enctype="multipart/form-data">
            <div class="form-group row mb-4 mt-5">
                <label for="" class="col-sm-2 col-form-label">Category Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control " id="" placeholder="Category Name" name="name">
                </div>
            </div>
            <div class="form-group row mb-4">
                <label for="" class="col-sm-2 col-form-label">Category Image</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" id="categoryImg" placeholder="Category image"
                        name="categoryImage" accept="image/*">
                    <img src="#" id="imgpreview" alt="">
                </div>
            </div>

            <div class="form-group row mb-4 text-center">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>


    </div>


    <%-include ('../partials/adminfooter'); -%>