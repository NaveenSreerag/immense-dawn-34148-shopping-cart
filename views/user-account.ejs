<%-include ('partials/header'); -%>


<div class="container personal-info">

    <h2 class="mt-4 text-center">Personal Info</h2>
    
  

    <form method="POST" action="/user/my-account" enctype="multipart/form-data">
        <div class="form-group row mb-4 mt-5">
            <label for="" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10 profile-pic-div">

                <% if(user.photo==="deafult.jpg"){ %>


                    <img src="/images/user/<%=user.photo%>" id="userAccountImg" alt="">
               <% }else{ %>
                
                <img src="/images/user/<%=user.id%>/<%=user.photo%>" id="userAccountImg" alt="">
               <% } %>

                <input type="file" class="form-control "  placeholder="Profile Picture" name="profilePic" value="" id="profileImg">
                <label for="profileImg" id="uploadBtn">Choose Photo</label>

            </div>
        </div>

        <div class="form-group row mb-4 mt-5">
            <label for="" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control "  placeholder="Name" name="name" value="<%=user.name%>">
            </div>
        </div>

        <div class="form-group row mb-4 mt-5">
            <label for="" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control "  placeholder="Email" name="email" value="<%=user.email%>">
            </div>
        </div>
      
        <div class="form-group row mb-4 text-center">
            <div class="col-sm-10">
                <button type="submit" class="">Update</button>
            </div>
        </div>
    </form>
